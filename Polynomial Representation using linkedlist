// Polynomial Representation using linkedlist
#include <stdio.h>
#include <stdlib.h>

struct node {
    int pow;
    int coeff;
    struct node* next;
};

struct node *head = NULL;

void create();
void display();

int main() {
    int ch;
    while (1) {
        printf("\nPress 1.create 2.display 3.exit: ");
        scanf("%d", &ch);
        switch (ch) {
            case 1: create(); break;
            case 2: display(); break;
            case 3: exit(0);
            default: printf("Wrong choice\n");
        }
    }
    return 0;
}

void create() {
    struct node *temp, *ptr;
    temp = (struct node*)malloc(sizeof(struct node));
    if (temp == NULL) {
        printf("Memory allocation failed\n");
        return;
    }
    printf("Enter coefficient and power of polynomial: ");
    scanf("%d %d", &(temp->coeff), &(temp->pow));
    temp->next = NULL;

    if (head == NULL) {
        head = temp;
    } else {
        ptr = head;
        while (ptr->next != NULL) {
            ptr = ptr->next;
        }
        ptr->next = temp;
    }
}

void display() {
    struct node* ptr = head;
    if (ptr == NULL) {
        printf("Linked list underflow\n");
        return;
    }
    printf("Polynomial list is:\n");
    while (ptr != NULL) {
        printf("%dx^%d", ptr->coeff, ptr->pow);
        ptr = ptr->next;
        if (ptr != NULL) printf(" + ");
    }
    printf("\n");
}
