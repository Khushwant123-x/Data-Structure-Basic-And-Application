// Depth First Search
#include <stdio.h>

#define MAX 100

int visited[MAX];

void dfs(int adj[MAX][MAX], int n, int start) {
    visited[start] = 1;
    printf("%d ", start);

    for(int j=0; j<n; j++) {
        if(adj[start][j] == 1 && !visited[j]) {
            dfs(adj, n, j);
        }
    }
}

int main() {
    int n;
    printf("Enter number of vertices: ");
    scanf("%d", &n);

    int adj[MAX][MAX];
    printf("Enter adjacency matrix:\n");
    for(int i=0; i<n; i++) {
        for(int j=0; j<n; j++) {
            scanf("%d", &adj[i][j]);
        }
    }

    int start;
    printf("Enter start vertex: ");
    scanf("%d", &start);

    for(int i=0; i<n; i++) visited[i] = 0;

    printf("DFS Traversal: ");
    dfs(adj, n, start);

    return 0;
}
