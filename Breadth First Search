// Breadth First Search 
#include <stdio.h>
#include <stdlib.h>

#define MAX 100

int queue[MAX], front = -1, rear = -1;
int visited[MAX];

void enqueue(int v) {
    if(rear == MAX-1) return;
    if(front == -1) front = 0;
    queue[++rear] = v;
}

int dequeue() {
    if(front == -1 || front > rear) return -1;
    return queue[front++];
}

int isEmpty() {
    return (front == -1 || front > rear);
}

void bfs(int adj[MAX][MAX], int n, int start) {
    for(int i=0; i<n; i++) visited[i] = 0;

    enqueue(start);
    visited[start] = 1;

    while(!isEmpty()) {
        int node = dequeue();
        printf("%d ", node);

        for(int j=0; j<n; j++) {
            if(adj[node][j] == 1 && !visited[j]) {
                enqueue(j);
                visited[j] = 1;
            }
        }
    }
}

int main() {
    int n;
    printf("Enter number of vertices: ");
    scanf("%d", &n);

    int adj[MAX][MAX];
    printf("Enter adjacency matrix:\n");
    for(int i=0; i<n; i++) {
        for(int j=0; j<n; j++) {
            scanf("%d", &adj[i][j]);
        }
    }

    int start;
    printf("Enter start vertex: ");
    scanf("%d", &start);

    printf("BFS Traversal: ");
    bfs(adj, n, start);

    return 0;
}
